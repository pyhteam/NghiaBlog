@model IEnumerable<NghiaBlog.Models.tintuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Danh Sách Tin Tức  <p style="float: right;">@Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })</p>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tieude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tomtat)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ngaytao)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tieude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tomtat)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ngaytao)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>